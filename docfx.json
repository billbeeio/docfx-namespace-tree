{
  "metadata": [ 
    {
      "src": [
        {
          "src": "../../",
          "files": [
            "**.csproj"
          ],
          "exclude": [ // list of files to be excluded, relative to src/cwd parameter, if any
            "**/obj/**",
            "**/bin/**",
            "**/.git/**",
            "**/.va/**",
            "**/.vs/**"
          ],
          "dot": false, // find dot files and folders (like .git)
          "case": true // case sensitive search...
        }
      ],
      // ATTENTION: When changing this path, you need to update Postprocessor.cs accordingly
      "dest": "./intermediate_files/metadata/resources/",
      "filter": "filterConfig.yml",
      "force": true // while developing
    }
  ],
  "build": {
    "content": [
      {
        // ATTENTION: When changing this path, you need to update Postprocessor.cs accordingly
        "src": "./intermediate_files/metadata/",
        "files": [
          "**.yml"
        ]
      }
    ],
    "resource": [],
    "postProcessors": [ "NamespacePostProcessor" ],
    "dest": "../../Dokumentation/",
    "template": [
      "default",
      "./resources/templates/override/"
    ],
    // ATTENTION: When changing this path, you need to update Postprocessor.cs accordingly
    "intermediateFolder": "./intermediate_files/build_step/", // intermediate files
    "maxParallelism": 0, // NOTE: keep this set to 0 since the build server will have build errors for some reason otherwise
    "force": true, // true = no caching
    "forcePostProcess": true, // true = no post process caching
    "markdownEngineName": "dfm",
    "globalMetadata": {
      // see https://dotnet.github.io/docfx/tutorial/docfx.exe_user_manual.html#322-reserved-metadata
      "_appTitle": "Nested Namespaces Documentation",
      "_appFooter": "Documentation with nested namespaces for C# backend code and repository structure. Generated by DocFx.",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_disableBreadcrumb": false,
      "_disableToc": false,
      "_disableAffix": false,
      "_disableContribution": true // we do not want 'improve this doc' button
    } //,
    //////////////////////////////////////////////////////
    // DEBUGGING PURPOSE:
    //////////////////////////////////////////////////////
    //"dryRun": true,
    //    "debug": true, // keep intermediate files to help finding errors
    //    "debugOutput": "./debug/output",
    //    "exportRawModel": true, // files before being transformed
    //    "rawModelOutputFolder": "./debug/rawModel",
    //    "exportViewModel": true // files after being transformed
    //    "viewModelOutputFolder": "./debug/viewModel"
  }
}